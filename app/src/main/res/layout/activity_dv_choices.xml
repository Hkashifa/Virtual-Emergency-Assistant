<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:background="@color/background"
    tools:context=".MainActivity"
    android:layout_gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/dv_choice_toolbar"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RadioGroup

            android:id="@+id/usertyperadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="60dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Your Choice"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/paste"
                    android:textSize="20sp"
                    android:fontFamily="@font/contrail_one"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="Map"
                    android:textSize="20sp"
                    android:textColor="@color/paste"
                    android:id="@+id/mapradio"
                    android:fontFamily="@font/contrail_one"
                    android:buttonTint="@color/paste"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Graph"
                    android:textSize="20sp"
                    android:textColor="@color/paste"
                    android:id="@+id/graphradio"
                    android:fontFamily="@font/contrail_one"
                    android:buttonTint="@color/paste"
                    />
                <Button
                    android:id="@+id/dvButtonID"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="OK"
                    android:textColor="@color/black"
                    android:fontFamily="@font/contrail_one"
                    app:backgroundTint="@color/paste"/>

            </LinearLayout>



        </RadioGroup>
    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>
